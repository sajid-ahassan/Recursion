#include <bits/stdc++.h>
using namespace std;

#define all(x) ++(x).begin(), (x).end()
#define allr(x) (x).rbegin(), (x).rend()
#define gsize(x) (int)((x).size())
#define int long long

#define endl '\n'
bool comparePairs(const pair<int, int> &a, const pair<int, int> &b)
{
    if (a.first != b.first)
        return a.first > b.first;
    return a.second < b.second;
}
#define optimize()                \
    ios_base::sync_with_stdio(0); \
    cin.tie(0);                   \
    cout.tie(0);
const int mod = 1e9;

bool ispelindrome(string &str, int s, int e)
{
    if (s >= e)
        return true;
    if (str[s] != str[e])
        return false;
    return ispelindrome(str, s+1, e-1);
}
signed main()
{
    optimize();
    string str;
    cin >> str;
    if (ispelindrome(str, 0, str.size()-1))
        cout << "YES" << endl;
    else
        cout << "NO" << endl;

    return 0;
}
